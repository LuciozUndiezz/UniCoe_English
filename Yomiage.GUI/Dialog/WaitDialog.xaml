<Window x:Class="Yomiage.GUI.Dialog.WaitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yomiage.GUI.Dialog"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStyle="None"
        BorderThickness="1"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        BorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
        WindowStartupLocation="CenterScreen"
        Title="WaitDialog" Height="200" Width="300">
    <Grid>
        <Label Margin="74,60,28,105" Content="Save Voice"/>
        <Image Source="../coloricon.png" Margin="23,64,224,86"/>
        <Button x:Name="cancelButton" Margin="195,61,23,110" BorderThickness="0" Padding="0" Click="Button_Click" Content="Cancel"/>
        <ProgressBar x:Name="progress" Margin="79,90,23,86" Value="0.0" Minimum="0" Maximum="1"/>
        <TextBlock x:Name="text" Margin="24,117,23,33" Text="" TextWrapping="Wrap"
                   Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" Opacity="0.7"/>
    </Grid>
</Window>
