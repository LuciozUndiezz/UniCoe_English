<UserControl
    x:Class="Yomiage.GUI.Dialog.Views.SettingShortcutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Yomiage.GUI.Dialog.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DataGrid
        Width="1000"
        AutoGenerateColumns="False"
        CanUserAddRows="False"
        IsReadOnly="True"
        CanUserReorderColumns="False"
        ItemsSource="{Binding Items}">
        <DataGrid.Columns>
            <DataGridTextColumn
                Width="*"
                Binding="{Binding Operation}"
                IsReadOnly="True"
                Header="Command" />
            <DataGridTextColumn
                Width="200"
                Binding="{Binding Key}"
                IsReadOnly="True"
                Header="Keyboard Shortcut" />
            <DataGridTextColumn
                Width="200"
                Binding="{Binding Target}"
                IsReadOnly="True"
                Header="Operable Object" />
        </DataGrid.Columns>
        <DataGrid.Style>
            <Style BasedOn="{StaticResource MahApps.Styles.DataGrid}" TargetType="{x:Type DataGrid}">
                <Setter Property="AlternatingRowBackground" Value="{DynamicResource MahApps.Brushes.Gray10}" />
            </Style>
        </DataGrid.Style>
    </DataGrid>
</UserControl>
