<Window x:Class="Yomiage.GUI.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:Yomiage.GUI"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        BorderThickness="0"
        ResizeMode="NoResize"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        Height="360" Width="800">
    <Grid>
        <DockPanel>
            <mah:MetroProgressBar x:Name="progBar" Minimum="0" Maximum="1" Value="0.0" d:Value="1"
                                  DockPanel.Dock="Bottom"
                                  Height="10">
            </mah:MetroProgressBar>
            <Grid>
                <Image Grid.Row="1" x:Name="image2" Source="./splashImage.png"/>
                <TextBlock x:Name="text" Text="Starting..." HorizontalAlignment="Left" VerticalAlignment="Bottom"
                       Foreground="White" Width="66" Margin="10,0,0,0"/>
                <Label HorizontalAlignment="Right" Name="versionLabel" Margin="0,0,8,0">version</Label>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
